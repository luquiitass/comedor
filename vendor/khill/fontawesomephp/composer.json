{
    "name": "khill/fontawesomephp",
    "description": "PHP wrapper library for the fantastic FontAwesome icon set.",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Hill",
            "email": "kevinkhill@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "autoload": {
        "psr-4": {
            "Khill\\Fontawesome\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "satooshi/php-coveralls": "~1.0",
        "symfony/yaml": "~2.0",
        "symfony/config": "~2.0",
        "symfony/console": "~2.0",
        "symfony/stopwatch": "~2.0",
        "symfony/filesystem": "~2.0",
        "doctrine/instantiator": "1.0.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Khill\\Fontawesome\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml"
    },
    "minimum-stability": "stable"
}
